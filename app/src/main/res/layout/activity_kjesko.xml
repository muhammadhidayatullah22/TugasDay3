<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KjeskoActivity">

    <TextView
        android:id="@+id/tvv1"
        android:text="KOENIGSEGG JESKO"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvv1"
        android:layout_marginTop="30dp"
        android:background="@drawable/kjeskoo" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/iv1"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/tvv1"
        android:layout_marginTop="30dp"
        android:background="@drawable/kjesko2" />

    <TextView
        android:id="@+id/tvv2"
        android:layout_below="@id/iv1"
        android:text="KOENIGSEGG JESKO"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/iv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Mesin: 5.0-liter twin-turbocharged V8, Tenaga: Lebih dari 1.280 PS dengan bahan bakar premium dan lebih dari 1.600 PS dengan bahan bakar E85, Torsi: Lebih dari 1.500 Nm\nPerforma: Kecepatan Maksimum: Lebih dari 480 km/jam, Akselerasi 0-100 km/jam: Sekitar 2,5 detik\nTransmisi: Transmisi 9-kecepatan LST (Light Speed Transmission) Koenigsegg, Transmisi 7-kecepatan paddle-shift opsional\nRangka dan Suspensi: Rangka: Monokok karbon-fiber, Suspensi: Suspensi aktif dengan pengaturan kinerja tinggi\nRem: Rem Depan: Brembo rem karbon-seramik, Rem Belakang: Brembo rem karbon-seramik\nDimensi dan Bobot: Panjang: Sekitar 4.694 mm, Lebar: Sekitar 2.030 mm, Tinggi: Sekitar 1.165 mm, Berat: Sekitar 1.420 kg\nInterior: Interior yang mewah dengan desain futuristik, Layar sentuh infotainment yang besar\nEksterior: Desain aerodinamis yang agresif, Fitur-fitur aerodinamis aktif\nFitur Lainnya: Sistem kontrol traksi, Sistem kontrol stabilitas, Sistem pengereman anti-blokir (ABS), Sistem pengukur tekanan ban"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tvv3"
        android:layout_below="@id/iv3"
        android:text="Price $ 3,000,000"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/sbvk3"
        android:layout_width="44dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvv3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/baseline_ios_share_24"/>

</RelativeLayout>