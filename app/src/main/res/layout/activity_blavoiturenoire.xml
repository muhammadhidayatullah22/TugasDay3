<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlavoiturenoireActivity">

    <TextView
        android:id="@+id/tvv1"
        android:text="@string/la_voiture_noireE"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvv1"
        android:layout_marginTop="30dp"
        android:background="@drawable/blavoire2" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/iv1"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/tvv1"
        android:layout_marginTop="30dp"
        android:background="@drawable/blavoire" />

    <TextView
        android:id="@+id/tvv2"
        android:layout_below="@id/iv1"
        android:text="@string/la_voiture_noireE"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/iv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Mesin: 8.0-liter quad-turbocharged W16, Tenaga: 1.500 PS, Torsi: 1.600 Nm\nPerforma: Kecepatan Maksimum: Terbatas hingga 380 km/jam, Akselerasi 0-100 km/jam: Sekitar 2,5 detik\nTransmisi: 7-kecepatan DSG (Direct-Shift Gearbox) dengan paddle shifters\nRangka dan Suspensi: Rangka: Monokok karbon-fiber, Suspensi: Suspensi independen dengan pengaturan kinerja tinggi\nRem: Rem Depan: Brembo rem karbon-seramik, Rem Belakang: Brembo rem karbon-seramik\nDimensi dan Bobot: Panjang: 4.733 mm, Lebar: 2.036 mm, Tinggi: 1.212 mm, Berat: Tidak diumumkan\nInterior: Interior yang mewah dengan material berkualitas tinggi, Sistem hiburan canggih dan sistem navigasi\nEksterior: Desain aerodinamis yang eksklusif dan elegan, Material konstruksi ringan untuk meningkatkan performa\nFitur Lainnya: Sistem kontrol traksi, Sistem kontrol stabilitas, Sistem pengereman anti-blokir (ABS), Sistem pengurangan kecepatan darurat, Sistem pengukur tekanan ban"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tvv3"
        android:layout_below="@id/iv3"
        android:text="Price $ 19,000,000"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bv1"
        android:layout_width="44dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvv3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/baseline_ios_share_24"/>

</RelativeLayout>